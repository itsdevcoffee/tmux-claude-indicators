#!/bin/bash
# Enable Claude Code indicators in tmux - Cyberpunk theme
# Uses ##HEX## pattern for hex codes inside conditionals

# Non-current window format - Conditional colors based on @claude-state
tmux set -g window-status-format '#{?@claude-state,#{?#{==:#{@claude-state},active},##[bg=##300b5f##,fg=##ffffff##,bold],#{?#{==:#{@claude-state},thinking},##[bg=##f706cf##,fg=##ffffff##,bold],#{?#{==:#{@claude-state},question},##[bg=##791e94##,fg=##ffffff##,bold,blink],#{?#{==:#{@claude-state},waiting},##[bg=##035ee8##,fg=##ffffff##,bold,blink],#{?#{==:#{@claude-state},complete},##[bg=##02f78e##,fg=##000000##,bold],##[bg=##8b4513##,fg=##ffe4b5##,bold]}}}}},##[bg=##8b4513##,fg=##ffe4b5##,bold]} │ #I #W #{@claude-emoji}'

# Current window format - Arrow + colored foreground text + transparent background
tmux set -g window-status-current-format '#{?@claude-state,#{?#{==:#{@claude-state},active},##[bg=terminal##,fg=##ffffff##,bold],#{?#{==:#{@claude-state},thinking},##[bg=terminal##,fg=##f706cf##,bold],#{?#{==:#{@claude-state},question},##[bg=terminal##,fg=##791e94##,bold,blink],#{?#{==:#{@claude-state},waiting},##[bg=terminal##,fg=##035ee8##,bold,blink],#{?#{==:#{@claude-state},complete},##[bg=terminal##,fg=##02f78e##,bold],##[bg=terminal##,fg=##ff8c42##,bold]}}}}},##[bg=terminal##,fg=##ff8c42##,bold]} ▶ #I #W #{@claude-emoji}'

tmux display-message "Claude indicators enabled - Cyberpunk theme"
